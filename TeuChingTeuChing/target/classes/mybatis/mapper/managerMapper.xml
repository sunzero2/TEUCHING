<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Manager">
	<select id="selectRevReport" resultType="ReviewReport">
		select * from(
			select
			rownum rnum, n1.* from(
				select * from
				tr_rev_report
				order by report_idx asc
			)n1)
		where rnum between #{start} and #{end}
	</select>

	<select id="selectTraReport" resultType="TrainerReport">
		select * from(
			select
			rownum rnum, n1.* from(
				select * from
				tr_tra_report
				order by report_idx asc
			)n1)
		where rnum between #{start} and #{end}
	</select>

	<select id="revCnt" resultType="int">
		select count(*) from tr_rev_report
	</select>

	<select id="traCnt" resultType="int">
		select count(*) from tr_tra_report
	</select>
	
	<select id="traManagerDetail" parameterType="int" resultType="TrainerReport">
		select * from tr_tra_report
		where report_idx = #{traid}
	</select>
	
	<select id="revManagerDetail" parameterType="int" resultType="ReviewReport">
		select * from tr_rev_report
		where report_idx = #{revid}
	</select>
</mapper>
