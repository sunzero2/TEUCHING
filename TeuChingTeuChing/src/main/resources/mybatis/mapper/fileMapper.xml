<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="File">
	<insert id="report_insertFile" parameterType="File_Upload">
		insert into tr_file_upload
		values(S_FILE_IDX.NEXTVAL, ${table_idx}, #{origin_filename},
		#{rename_filename}, #{savepath}, 'N')
	</insert>
	
	<insert id="post_insertFile" parameterType="File_Upload">
		<if test="table_idx == 0">
			insert into tr_file_upload values(s_file_idx.nextval, s_post_idx.currval, #{origin_filename}, #{rename_filename}, #{savepath}, 'N')
		</if>
		<if test="table_idx != 0">
			insert into tr_file_upload values(s_file_idx.nextval, #{table_idx}, #{origin_filename}, #{rename_filename}, #{savepath}, 'N')
		</if>
	</insert>
	
	<select id="post_selectFile" resultType="File_Upload">
		select * from tr_file_upload where table_idx = #{postIdx} and rename_filename like '%post%' and edit_yn = 'N'
	</select>
	
	<update id="post_updateFile">
		update tr_file_upload set edit_yn = 'Y' where table_idx = #{postIdx}
	</update>
	
	<insert id="insertQualiFile" parameterType="File_Upload">
		INSERT INTO
				TR_FILE_UPLOAD
		VALUES(
				S_FILE_IDX.NEXTVAL
				, ${table_idx}
				, #{origin_filename}
				, #{rename_filename}
				, #{savepath}
				,'N'
		)
	</insert>
	
	<select id="selectQualiFile" resultType="string">
		SELECT
			RENAME_FILENAME
		FROM
			TR_FILE_UPLOAD
		WHERE
			TABLE_IDX = #{qualiidx}
			AND
			RENAME_FILENAME LIKE '%tr_quali%'
	</select>
</mapper>
